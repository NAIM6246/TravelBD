<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sd3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddPlace">

    <EditText
        android:id="@+id/place_name"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="#80AEFC9A"
        android:ems="10"
        android:hint="@string/Add_place_name"
        android:inputType="textPersonName"
        android:textColorHint="#BBB4B4"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="100dp"
        android:text="@string/Place_name"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:text="@string/Add_division"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/place_name"
        app:layout_constraintTop_toBottomOf="@+id/place_name"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/place_district"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="10dp"
        android:background="#80AEFC9A"
        android:ems="10"
        android:hint="@string/add_division"
        android:inputType="textPersonName"
        android:textColorHint="#BBB4B4"
        android:textIsSelectable="false"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/Add"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="180dp"
        android:background="@color/button_color"
        android:text="@string/Add"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/place_district"
        app:layout_constraintStart_toStartOf="@+id/place_district"
        app:layout_constraintTop_toBottomOf="@+id/place_district"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:text="@string/Add_desciption"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/place_district"
        app:layout_constraintTop_toBottomOf="@+id/place_district"
        tools:ignore="MissingConstraints"/>

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="10dp"
        android:background="#80AEFC9A"
        android:ems="10"
        android:hint="@string/add_desciption"
        android:inputType="textPersonName"
        android:textColorHint="#BBB4B4"
        android:textIsSelectable="false"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>