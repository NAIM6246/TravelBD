<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sd3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Divisions">

    <Button
        android:id="@+id/dhaka"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_gravity="start|top"
        android:layout_marginStart="140dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_rounded"
        android:clickable="true"
        android:focusable="true"
        android:shadowRadius="25"
        android:text="@string/Dhaka"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:visibility="visible" />

    <Button
        android:id="@+id/chittagong"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_rounded"
        android:text="@string/chittagong"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/dhaka"
        app:layout_constraintStart_toStartOf="@+id/dhaka"
        app:layout_constraintTop_toBottomOf="@+id/dhaka"
        tools:ignore="MissingConstraints"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button3"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_rounded"
        android:text="@string/sylhet"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/chittagong"
        app:layout_constraintStart_toStartOf="@+id/chittagong"
        app:layout_constraintTop_toBottomOf="@+id/chittagong"
        tools:ignore="MissingConstraints"
        tools:visibility="visible" />

    <Button
        android:id="@+id/khulna"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_rounded"
        android:text="@string/khulna"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        tools:ignore="MissingConstraints"
        tools:visibility="visible" />

    <Button
        android:id="@+id/rajshahi"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_rounded"
        android:text="@string/rajshahi"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/khulna"
        app:layout_constraintStart_toStartOf="@+id/khulna"
        app:layout_constraintTop_toBottomOf="@+id/khulna"
        tools:ignore="MissingConstraints"
        tools:visibility="visible" />

    <Button
        android:id="@+id/mymensingh"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_rounded"
        android:text="@string/rangpur"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/rajshahi"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rajshahi"
        app:layout_constraintTop_toBottomOf="@+id/rajshahi"
        tools:ignore="MissingConstraints"
        tools:visibility="visible" />

    <Button
        android:id="@+id/barisal"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_rounded"
        android:text="@string/barisal"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/mymensingh"
        app:layout_constraintStart_toStartOf="@+id/mymensingh"
        app:layout_constraintTop_toBottomOf="@+id/mymensingh"
        tools:ignore="MissingConstraints"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>